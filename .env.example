# База данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/funding_rates

# Секретный ключ для сессий (сгенерируйте случайную строку)
SESSION_SECRET=your-very-long-random-secret-key-here

# Настройки Replit OAuth
REPLIT_DOMAINS=localhost:5000,your-domain.com
ISSUER_URL=https://replit.com/oidc
REPL_ID=your-replit-app-id

# Telegram Bot (опционально, для уведомлений)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Настройки PostgreSQL (если используются отдельно)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=funding_rates